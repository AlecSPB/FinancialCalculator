<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context="com.madhouseapps.financialcalculator.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="6"
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_height="0dp">p

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:id="@+id/MAD"
                android:textColor="#000000"
                android:text="MAD"
                android:textSize="18sp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:id="@+id/HOUSE"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="HOUSE"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="50dp"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/Quote"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="@dimen/h3"
                android:text="It&apos;s not your salary that makes you rich, it&apos;s your spending habits."
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/Author"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="italic"
                android:text="â€” Charles A Jaffer"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:weightSum="5"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="50dp"
                android:id="@+id/EMIButton"
                android:background="@drawable/redcircle"
                android:gravity="center"
                android:text="EMI"
                android:textColor="#FFF"
                android:layout_height="50dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="50dp"
                android:id="@+id/FDButton"
                android:background="@drawable/bluecircle"
                android:gravity="center"
                android:text="FD"
                android:textColor="#FFF"
                android:layout_height="50dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="50dp"
                android:id="@+id/RDButton"
                android:background="@drawable/greencircle"
                android:gravity="center"
                android:text="RD"
                android:textColor="#FFF"
                android:layout_height="50dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="50dp"
                android:id="@+id/SIPButton"
                android:background="@drawable/yellowcircle"
                android:gravity="center"
                android:text="SIP"
                android:textColor="#FFF"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="50dp"
                android:id="@+id/RPButton"
                android:background="@drawable/orangecircle"
                android:gravity="center"
                android:text="RP"
                android:textColor="#FFF"
                android:layout_height="50dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:weightSum="3"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <TextView
            android:layout_width="50dp"
            android:id="@+id/FAQButton"
            android:background="@drawable/blackcircle"
            android:gravity="center"
            android:text="FAQs"
            android:layout_margin="5dp"
            android:textColor="#FFF"
            android:textSize="8sp"
            android:layout_height="50dp" />

        <TextView
            android:layout_width="50dp"
            android:id="@+id/ShareButton"
            android:background="@drawable/blackcircle"
            android:gravity="center"
            android:text="SHARE"
            android:textSize="8sp"
            android:layout_margin="5dp"
            android:textColor="#FFF"
            android:layout_height="50dp" />

        <TextView
            android:layout_width="50dp"
            android:id="@+id/RateButton"
            android:background="@drawable/blackcircle"
            android:gravity="center"
            android:text="RATE"
            android:textSize="8sp"
            android:layout_margin="5dp"
            android:textColor="#FFF"
            android:layout_height="50dp" />

    </LinearLayout>
</LinearLayout>
